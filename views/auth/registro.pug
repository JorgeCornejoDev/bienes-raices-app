extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices 
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-200.uppercase.text-xs.text-center.p-2.mb-1.front-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST", action="/auth/registro" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="nombre") Tu Nombre 
                        input#nombre.w-full.px-2.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder="Tu Nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '' )
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email") Tu Email de registro
                        input#email.w-full.px-2.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder="Tu email" type="email" name="email" value= usuario ? usuario.email : '')
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-2.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder="Password" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="repetirPassword") Repite tu password
                        input#repetirPassword.w-full.px-2.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder="Repite tu password" type="password" name="repetirPassword")
                    
                    div.flex.items-center.justify-between
                        a.text-gray-400.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-400.text-xs(href="/auth/reestablecer-password") Olvide mi Password
                    
                    input(class="w-full bg-indigo-400 hover:bg-indigo-500 py-3 cursor-pointer text-white font-bold " type="submit" value="Crear Cuenta")